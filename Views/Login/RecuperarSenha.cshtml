@{
    ViewData["Title"] = "Recuperar Senha";
}

<div class="flex items-center justify-center h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-center mb-6">Recuperar Senha</h2>
        @if (ViewBag.Mensagem != null)
        {
            <p class="text-green-500 text-center">@ViewBag.Mensagem</p>
        }
        <form method="post">
            <div class="mb-4">
                <label for="email" class="block text-gray-700">Digite seu e-mail</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-lg" placeholder="Digite seu e-mail" required>
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600">Enviar</button>
        </form>
        <div class="mt-4 text-center">
            <a href="/Login/Index" class="text-blue-500 hover:underline">Voltar para Login</a>
        </div>
    </div>
</div>